{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "How many people are happy?",
  "background": "#E8E8E8",
  "width": 390,
  "height": 340,
  "data": {
    "url": "data/share-of-people-who-say-they-are-happy.csv"
  },
  "params": [
    {
      "name": "country_select",
      "bind": {
        "input": "select",
        "options": [
          null,
          "United States",
          "Australia",
          "New Zealand",
          "Ireland",
          "United Kingdom",
          "India",
          "Japan",
          "China",
          "Mexico",
          "Poland",
          "Russia",
          "South Africa",
          "South Korea",
          "Turkey"
        ],
        "labels": [
          "All",
          "United States",
          "Australia",
          "New Zealand",
          "Ireland",
          "United Kingdom",
          "India",
          "Japan",
          "China",
          "Poland",
          "Russia",
          "South Africa",
          "South Korea",
          "Turkey"
        ],
        "name": "Choose Country: "
      }
    }
  ],
  "transform": [
    { "filter": "country_select == null || datum.Country == country_select" },
    {
      "filter": {
        "field": "Country",
        "oneOf": [
          "United States",
          "Australia",
          "New Zealand",
          "Ireland",
          "United Kingdom",
          "India",
          "Japan",
          "China",
          "Poland",
          "Russia",
          "South Africa",
          "South Korea",
          "Turkey"
        ]
      }
    }
  ],
  "mark": {
    "type": "line",
    "point": true
  },
  "encoding": {
    "x": {
      "timeUnit": "year",
      "field": "Year",
      "title": "Year",
      "scale": { "domain": [1982, 2016] }
    },
    "y": {
      "aggregate": "mean",
      "field": "Share of people who are happy",
      "type": "quantitative",
      "title": "People who are happy (%)"
    },
    "color": {
      "field": "Country",
      "type": "nominal",
      "scale": {
        "domain": [
          "United States",
          "Australia",
          "New Zealand",
          "United Kingdom",
          "India",
          "China",
          "Russia",
          "South Korea",
          "Turkey",
          "Ireland",
          "Japan",
          "Poland",
          "South Africa"
        ],
        "range": [
          "#0085b1",
          "#e98700",
          "#0161d7",
          "#ef62e2",
          "#008625",
          "#00d3dc",
          "#007144",
          "#833f2a",
          "#caabff",
          "lightgray",
          "lightgray",
          "lightgray",
          "lightgray"
        ]
      },
      "legend": null
    },
    "tooltip": [
      { "field": "Country", "type": "nominal" },
      {
        "field": "Share of people who are happy",
        "type": "quantitative",
        "format": ".2f",
        "title": "People who are happy (%)"
      }
    ]
  },
  "config": {
    "view": { "stroke": "transparent" },
    "title": {
      "font": "Verdana",
      "anchor": "start",
      "fontSize": 18,
      "offset": 20
    },
    "axis": {
      "labelFont": "Verdana",
      "titleFont": "Verdana"
    }
  }
}
