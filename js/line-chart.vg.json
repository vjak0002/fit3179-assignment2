{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "How many people are happy?",
  "background": "#E8E8E8",
  "width": 410,
  "height": 340,
  "data": {
    "url": "data/share-of-people-who-say-they-are-happy.csv"
  },
  "params": [
    {
      "name": "country_select",
      "bind": {
        "input": "select",
        "options": [
          null,
          "United States",
          "Australia",
          "New Zealand",
          "Europe",
          "China",
          "Russia"
        ],
        "labels": [
          "All",
          "United States",
          "Australia",
          "New Zealand",
          "Europe",
          "China",
          "Russia"
        ],
        "name": "Choose Country: "
      }
    }
  ],
  "transform": [
    { "filter": "country_select == null || datum.Country == country_select" },
    {
      "filter": {
        "field": "Country",
        "oneOf": [
          "United States",
          "Australia",
          "New Zealand",
          "Europe",
          "China",
          "Russia"
        ]
      }
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "line",
        "point": true,
        "strokeWidth": 2.4
      },
      "encoding": {
        "x": {
          "timeUnit": "year",
          "field": "Year",
          "title": "Year",
          "scale": { "domain": [1982, 2016] }
        },
        "y": {
          "aggregate": "mean",
          "field": "Share of people who are happy",
          "type": "quantitative",
          "title": "People who are happy (%)"
        },
        "color": {
          "field": "Country",
          "type": "nominal",
          "scale": {
            "domain": [
              "United States",
              "Australia",
              "New Zealand",
              "Europe",
              "China",
              "Russia"
            ],
            "range": [
              "#0085b1",
              "#e98700",
              "#0161d7",
              "#ef62e2",
              "#00d3dc",
              "#007144"
            ]
          },
          "legend": null
        },
        "tooltip": [
          { "field": "Country", "type": "nominal" },
          {
            "field": "Share of people who are happy",
            "type": "quantitative",
            "format": ".2f",
            "title": "People who are happy (%)"
          }
        ]
      }
    },
    {
      "data": {
        "values": [
          {
            "x": 55,
            "y": 38,
            "info": "Russian Economic"
          },
          {
            "x": 55,
            "y": 34,
            "info": "Crisis Period"
          }
        ]
      },
      "transform": [
        {
          "calculate": "country_select == null || country_select == 'Russia' && datum.info ? datum.info : ''",
          "as": "Info"
        }
      ],
      "mark": {
        "type": "text",
        "color": "#007144",
        "fontWeight": "bold"
      },
      "encoding": {
        "x": {
          "field": "x",
          "type": "quantitative",
          "scale": { "domain": [0, 100] },
          "axis": null
        },
        "y": {
          "field": "y",
          "type": "quantitative",
          "scale": { "domain": [0, 100] }
        },
        "text": {
          "field": "Info",
          "type": "nominal"
        }
      }
    },
    {
      "data": {
        "values": [
          {
            "x": 50,
            "y": 90,
            "name": "United States",
            "colour": "#0085b1"
          },
          {
            "x": 10,
            "y": 91,
            "name": "Australia",
            "colour": "#e98700"
          },
          {
            "x": 50,
            "y": 98,
            "name": "New Zealand",
            "colour": "#0161d7"
          },
          {
            "x": 8,
            "y": 73,
            "name": "Europe",
            "colour": "#ef62e2"
          },
          {
            "x": 31,
            "y": 63,
            "name": "China",
            "colour": "#00d3dc"
          },
          {
            "x": 26,
            "y": 47,
            "name": "Russia",
            "colour": "#007144"
          }
        ]
      },
      "mark": {
        "type": "text",
        "color": { "expr": "datum.colour" }
      },
      "encoding": {
        "x": {
          "field": "x",
          "type": "quantitative",
          "scale": { "domain": [0, 100] },
          "axis": null
        },
        "y": {
          "field": "y",
          "type": "quantitative",
          "scale": { "domain": [0, 100] }
        },
        "text": {
          "field": "name",
          "type": "nominal"
        }
      }
    },
    {
      "data": {
        "values": [
          {
            "x": 44,
            "y": 44,
            "img": "assets/russia-annotation.png"
          }
        ]
      },
      "mark": {
        "type": "image",
        "width": 40,
        "height": 40
      },
      "encoding": {
        "x": {
          "field": "x",
          "type": "quantitative",
          "scale": { "domain": [0, 100] },
          "axis": null
        },
        "y": {
          "field": "y",
          "type": "quantitative",
          "scale": { "domain": [0, 100] }
        },
        "url": { "field": "img", "type": "nominal" }
      }
    }
  ],
  "config": {
    "view": { "stroke": "transparent" },
    "title": {
      "font": "Verdana",
      "anchor": "start",
      "fontSize": 18,
      "offset": 20
    },
    "axis": {
      "labelFont": "Verdana",
      "titleFont": "Verdana"
    },
    "text": { "font": "Verdana" }
  }
}
