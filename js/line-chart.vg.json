{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "How many people are happy?",
  "background": "#E8E8E8",
  "width": 450,
  "height": 340,
  "data": {
    "url": "data/share-of-people-who-say-they-are-happy.csv"
  },
  "params": [
    {
      "name": "country_select",
      "bind": {
        "input": "select",
        "options": [
          null,
          "United States",
          "Australia",
          "New Zealand",
          "Ireland",
          "India",
          "Japan",
          "China",
          "Mexico",
          "Poland",
          "Russia",
          "South Africa",
          "South Korea",
          "Turkey"
        ],
        "labels": [
          "All",
          "United States",
          "Australia",
          "New Zealand",
          "Ireland",
          "India",
          "Japan",
          "China",
          "Mexico",
          "Poland",
          "Russia",
          "South Africa",
          "South Korea",
          "Turkey"
        ],
        "name": "Choose Country: "
      }
    }
  ],
  "transform": [
    { "filter": "country_select == null || datum.Country == country_select" },
    {
      "filter": {
        "field": "Country",
        "oneOf": [
          "United States",
          "Australia",
          "New Zealand",
          "Ireland",
          "India",
          "Japan",
          "China",
          "Mexico",
          "Poland",
          "Russia",
          "South Africa",
          "South Korea",
          "Turkey"
        ]
      }
    }
  ],
  "mark": {
    "type": "line",
    "point": true
  },
  "encoding": {
    "x": {
      "timeUnit": "year",
      "field": "Year",
      "title": "Year",
      "scale": { "domain": [1982, 2016] }
    },
    "y": {
      "aggregate": "mean",
      "field": "Share of people who are happy",
      "type": "quantitative",
      "title": "People who are happy (%)"
    },
    "color": { "field": "Country", "type": "nominal", "legend": null },
    "tooltip": [
      { "field": "Country", "type": "nominal" },
      {
        "field": "Share of people who are happy",
        "type": "quantitative",
        "format": ".2f",
        "title": "People who are happy (%)"
      }
    ]
  },
  "config": {
    "view": { "stroke": "transparent" },
    "title": {
      "font": "Gill Sans",
      "anchor": "start"
    },
    "axis": {
      "labelFont": "Gill Sans",
      "titleFont": "Gill Sans"
    }
  }
}
