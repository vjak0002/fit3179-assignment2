{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Least and Most Happy Countries in the World - 2019",
  "width": 1300,
  "height": 800,
  "background": "#E8E8E8",
  "projection": {
    "type": "equalEarth"
  },
  "data": {
    "url": "../data/ne_110m_countries.topojson",
    "format": { "type": "topojson", "feature": "ne_110m_countries" }
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "../data/countries-happiness-2019.csv"
        },
        "key": "country",
        "fields": ["score", "lat", "long", "country"]
      }
    },
    { "calculate": "datum.score", "as": "Score" },
    { "calculate": "datum.lat", "as": "Latitude" },
    { "calculate": "datum.long", "as": "Longitude" },
    { "calculate": "upper(datum.country)", "as": "Country" }
  ],
  "encoding": {
    "longitude": { "field": "Longitude", "type": "quantitative" },
    "latitude": { "field": "Latitude", "type": "quantitative" }
  },
  "layer": [
    {
      "mark": {
        "type": "geoshape",
        "fill": "#E6E6E3",
        "strokeWidth": 1.5,
        "stroke": "black"
      }
    },
    {
      "mark": { "type": "geoshape", "stroke": "black", "strokeWidth": 0.75 },
      "encoding": {
        "color": {
          "field": "Score",
          "type": "quantitative",
          "scale": {
            "scheme": "lighttealblue"
          }
        },
        "tooltip": [
          { "field": "properties.NAME", "type": "nominal", "title": "Country" },
          {
            "field": "Score",
            "type": "quantitative",
            "title": "Happiness Index"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 15,
        "fontWeight": "bold",
        "dy": -12
      },
      "encoding": {
        "text": { "field": "Country", "type": "nominal" },
        "color": { "value": "black" }
      },
      "transform": [
        {
          "filter": "indexof(['Canada', 'Russia', 'Brazil', 'Australia', 'China', 'USA', 'India'], datum.country) !== -1"
        }
      ]
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 11,
        "align": "center"
      },
      "encoding": {
        "text": {
          "field": "Score",
          "type": "quantitative",
          "format": ".2f",
          "condition": { "test": "datum.Score < 4", "value": "" }
        }
      },
      "transform": [
        {
          "filter": "indexof(['Philippines','Namibia','Mongolia','Vietnam','Cambodia','Lithuania','Uganda','Estonia','Taiwan','Greece','Japan','Bulgaria','Croatia','Denmark','Moldova','Montenegro','Kosovo','South Korea','Nepal','Bangladesh','Bhutan','Laos','Liberia','Sierra Leone','Sri Lanka','Chile','Madagascar','Malaysia','New Zealand','Italy','Luxembourg','Serbia','Slovakia','Netherlands','Czechia','Slovenia','United Arab Emirates','Switzerland','Austria','Hungary','Albania','Tunisia','Mozambique','Ecuador','Georgia','Azerbaijan','Costa Rica','Panama','Honduras','Cyprus','Armenia','Nicaragua','El Salvador','Syria','Israel','Jordan','Guatemala','Portugal','Paraguay','Senegal','Guinea','Ghana','Qatar','Kuwait','Gambia','Togo','Benin','Palestinian Territories','Lebanon','Tajikistan','Kyrgyzstan','Turkmenistan','Uzbekistan','Latvia','Belgium','Germany','United Kingdom','Ireland','Iceland','Jamaica'], datum.country) === -1"
        }
      ]
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 10,
        "fontWeight": "bold",
        "dx": 25,
        "dy": 15
      },
      "encoding": {
        "text": { "field": "Score", "type": "quantitative", "format": ".2f" }
      },
      "transform": [
        {
          "filter": "datum.country === 'Japan'"
        }
      ]
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 10,
        "fontWeight": "bold",
        "dx": 28,
        "dy": 2
      },
      "encoding": {
        "text": { "field": "Country", "type": "nominal" }
      },
      "transform": [
        {
          "filter": "datum.country === 'Japan'"
        }
      ]
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 10,
        "fontWeight": "bold",
        "dx": -25,
        "dy": 15
      },
      "encoding": {
        "text": {
          "field": "Score",
          "type": "quantitative",
          "format": ".2f"
        }
      },
      "transform": [
        {
          "filter": "datum.country === 'United Kingdom'"
        }
      ]
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 10,
        "fontWeight": "bold",
        "dx": -35,
        "dy": -5
      },
      "encoding": {
        "text": { "field": "Country", "type": "nominal" }
      },
      "transform": [
        {
          "filter": "datum.country === 'United Kingdom'"
        }
      ]
    }
  ],
  "config": {
    "view": { "stroke": "transparent" },
    "title": { "fontWeight": "bold", "fontSize": 30 },
    "legend": {
      "symbolDirection": "horizontal",
      "gradientDirection": "horizontal",
      "orient": "bottom",
      "labelFontSize": 18,
      "gradientLength": 300,
      "titleAnchor": "middle",
      "titlePadding": 10,
      "titleFontSize": 15
    }
  }
}
