{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "HAPPIEST AND UNHAPPIEST COUNTRIES IN THE WORLD - 2022",
  "width": 1145,
  "height": 850,
  "background": "#E8E8E8",
  "autosize": { "type": "fit", "resize": true },
  "projection": {
    "type": "equalEarth"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/vjak0002/fit3179-assignment2/main/data/ne_110m_countries.topojson",
    "format": { "type": "topojson", "feature": "ne_110m_countries" }
  },
  "encoding": {
    "longitude": { "field": "Longitude", "type": "quantitative" },
    "latitude": { "field": "Latitude", "type": "quantitative" }
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/vjak0002/fit3179-assignment2/main/data/countries-happiness-2022.csv",
          "format": { "type": "csv" }
        },
        "key": "country",
        "fields": ["score", "lat", "long", "country", "rank"]
      }
    },
    { "calculate": "datum.score", "as": "Score" },
    { "calculate": "datum.lat", "as": "Latitude" },
    { "calculate": "datum.long", "as": "Longitude" },
    { "calculate": "upper(datum.country)", "as": "Country" }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vjak0002/fit3179-assignment2/main/data/oceans.topojson",
        "format": { "type": "topojson", "feature": "oceans" }
      },
      "mark": {
        "type": "geoshape",
        "fill": "skyblue"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vjak0002/fit3179-assignment2/main/data/ne_110m_countries.topojson",
        "format": { "type": "topojson", "feature": "ne_110m_graticules_30" }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "#E8E8E8"
      }
    },
    {
      "mark": {
        "type": "geoshape",
        "fill": "#E6E6E3",
        "strokeWidth": 1.5,
        "stroke": "black"
      }
    },
    {
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeWidth": 1.5
      },
      "encoding": {
        "color": {
          "field": "Score",
          "type": "quantitative",
          "scale": {
            "scheme": "plasma",
            "domain": [3, 8]
          },
          "legend": {
            "title": "Happiness Index"
          }
        },
        "tooltip": [
          { "field": "properties.NAME", "type": "nominal", "title": "Country" },
          {
            "field": "Score",
            "type": "quantitative",
            "title": "Happiness Index"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 12,
        "fontWeight": "bold",
        "dy": -12
      },
      "encoding": {
        "text": { "field": "Country", "type": "nominal" },
        "color": { "value": "black" }
      },
      "transform": [
        {
          "filter": "indexof(['Canada', 'Russia', 'Brazil', 'Australia', 'China', 'USA', 'India'], datum.country) !== -1"
        }
      ]
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 11,
        "align": "center",
        "dy": 3
      },
      "encoding": {
        "text": {
          "field": "Score",
          "type": "quantitative",
          "format": ".2f",
          "condition": { "test": "datum.Score < 4", "value": "" }
        }
      },
      "transform": [
        {
          "filter": "indexof(['Philippines','Congo','Cameroon','Namibia','Mongolia','Vietnam','Cambodia','Lithuania','Uganda','Estonia','Taiwan','Greece','Japan','Bulgaria','Croatia','Denmark','Moldova','Montenegro','Kosovo','South Korea','Nepal','Bangladesh','Bhutan','Laos','Liberia','Sierra Leone','Sri Lanka','Chile','Madagascar','Malaysia','New Zealand','Italy','Luxembourg','Serbia','Slovakia','Netherlands','Czechia','Slovenia','United Arab Emirates','Switzerland','Austria','Hungary','Albania','Tunisia','Mozambique','Ecuador','Georgia','Azerbaijan','Costa Rica','Panama','Gabon','Honduras','Cyprus','Armenia','Nicaragua','El Salvador','Syria','Israel','Jordan','Guatemala','Portugal','Paraguay','Senegal','Guinea','Ghana','Qatar','Kuwait','Gambia','Togo','Benin','Palestinian Territories','Lebanon','Tajikistan','Kyrgyzstan','Turkmenistan','Uzbekistan','Latvia','Belgium','Germany','UK','Ireland','Iceland','Jamaica','Sweden','Norway','Finland'], datum.country) === -1"
        }
      ]
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 10,
        "fontWeight": "bold",
        "dx": 25,
        "dy": 15
      },
      "encoding": {
        "text": { "field": "Score", "type": "quantitative", "format": ".2f" }
      },
      "transform": [
        {
          "filter": "datum.country === 'Japan'"
        }
      ]
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 13,
        "fontWeight": "bold",
        "dx": 37,
        "dy": 2
      },
      "encoding": {
        "text": { "field": "Country", "type": "nominal" }
      },
      "transform": [
        {
          "filter": "datum.country === 'Japan'"
        }
      ]
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 10,
        "fontWeight": "bold",
        "dx": -5,
        "dy": -15
      },
      "encoding": {
        "text": {
          "field": "Score",
          "type": "quantitative",
          "format": ".2f"
        }
      },
      "transform": [
        {
          "filter": "datum.country === 'UK'"
        }
      ]
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 13,
        "fontWeight": "bold",
        "dx": -5,
        "dy": -25
      },
      "encoding": {
        "text": { "field": "Country", "type": "nominal" }
      },
      "transform": [
        {
          "filter": "datum.country === 'UK'"
        }
      ]
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 10,
        "fontWeight": "bold",
        "dx": -40,
        "dy": 30
      },
      "encoding": {
        "text": { "field": "Score", "type": "quantitative", "format": ".2f" }
      },
      "transform": [
        {
          "filter": "datum.country === 'New Zealand'"
        }
      ]
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 10,
        "fontWeight": "bold",
        "dx": -20,
        "dy": 5
      },
      "encoding": {
        "text": { "field": "Score", "type": "quantitative", "format": ".2f" }
      },
      "transform": [
        {
          "filter": "datum.country === 'Ireland'"
        }
      ]
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 10,
        "fontWeight": "bold",
        "dx": -10,
        "dy": 60
      },
      "encoding": {
        "text": { "field": "Score", "type": "quantitative", "format": ".2f" }
      },
      "transform": [
        {
          "filter": "datum.country === 'Chile'"
        }
      ]
    }
  ],
  "config": {
    "title": {
      "fontWeight": "bold",
      "fontSize": 21,
      "anchor": "start",
      "dx": 120,
      "font": "Gill Sans"
    },
    "text": {
      "font": "Gill Sans"
    },
    "legend": {
      "symbolDirection": "horizontal",
      "gradientDirection": "horizontal",
      "orient": "none",
      "labelFontSize": 15,
      "gradientLength": 300,
      "titleFont": "Gill Sans",
      "labelFont": "Gill Sans",
      "titleAnchor": "middle",
      "titlePadding": 10,
      "titleFontSize": 15,
      "legendX": 440,
      "legendY": 760
    }
  }
}
