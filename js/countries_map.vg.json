{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "add title here",
  "width": 1250,
  "height": 700,
  "projection": {
    "type": "equalEarth"
  },
  "data": {
    "url": "../data/ne_110m_countries.topojson",
    "format": {
      "type": "topojson",
      "feature": "ne_110m_countries"
    }
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "../data/countries-happiness-2019.csv"
        },
        "key": "country",
        "fields": ["score"]
      }
    },
    { "calculate": "datum.score", "as": "Happiness Index" }
  ],
  "layer": [
    {
      "mark": {
        "type": "geoshape",
        "fill": "#E6E6E3",
        "strokeWidth": 1,
        "stroke": "black"
      }
    },
    {
      "mark": { "type": "geoshape" },
      "encoding": {
        "color": {
          "field": "Happiness Index",
          "type": "quantitative"
        },
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "score",
            "type": "quantitative",
            "title": "Happiness Index"
          }
        ]
      }
    }
  ],
  "config": {
    "view": { "stroke": "transparent" }
  }
}
