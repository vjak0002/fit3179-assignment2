{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "add title here",
  "width": 1250,
  "height": 700,
  "projection": {
    "type": "equalEarth"
  },
  "data": {
    "url": "../data/ne_110m_countries.topojson",
    "format": {
      "type": "topojson",
      "feature": "ne_110m_countries"
    }
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "../data/countries-happiness-2019.csv"
        },
        "key": "country",
        "fields": ["score", "lat", "long"]
      }
    },
    { "calculate": "datum.score", "as": "Score" },
    { "calculate": "datum.lat", "as": "Latitude" },
    { "calculate": "datum.long", "as": "Longitude" }
  ],
  "layer": [
    {
      "mark": {
        "type": "geoshape",
        "fill": "#E6E6E3",
        "strokeWidth": 1.5,
        "stroke": "black"
      }
    },
    {
      "mark": { "type": "geoshape" },
      "encoding": {
        "color": {
          "field": "Score",
          "type": "quantitative",
          "scale": {
            "scheme": "plasma"
          }
        },
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "Score",
            "type": "quantitative",
            "title": "Happiness Index"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 10,
        "dy": 5,
        "align": "center",
        "fontWeight": "bold"
      },
      "encoding": {
        "latitude": {
          "field": "Latitude",
          "type": "quantitative"
        },
        "longitude": {
          "field": "Longitude",
          "type": "quantitative"
        },
        "text": { "field": "Score", "type": "quantitative", "format": ".2f" }
      }
    }
  ],
  "config": {
    "view": { "stroke": "transparent" }
  }
}
