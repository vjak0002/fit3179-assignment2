{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "add title here",
  "width": 1200,
  "height": 700,
  "projection": {
    "type": "naturalEarth1"
  },
  "layer": [
    {
      "data": {
        "url": "../data/ne_110m_countries.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_countries"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#E6E6E3",
        "stroke": "black",
        "strokeWidth": 0.75
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": { "url": "../data/countries-happiness-2019.csv" },
            "key": "country",
            "fields": ["score"]
          }
        },
        { "calculate": "datum.score", "as": "Happiness Index" }
      ],
      "layer": [
        {
          "mark": { "type": "geoshape" },
          "encoding": {
            "color": {
              "field": "Happiness Index",
              "type": "quantitative"
            },
            "tooltip": [
              { "field": "properties.NAME", "type": "nominal" },
              { "field": "Happiness Index", "type": "quantitative" }
            ]
          }
        }
      ]
    }
  ],
  "config": {
    "view": { "stroke": "transparent" }
  }
}
